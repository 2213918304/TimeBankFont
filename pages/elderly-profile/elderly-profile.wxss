/* 个人中心页面 - TDesign风格 */
.elderly-profile {
  width: 100vw;
  height: 100vh;
  background: white;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.content {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}

/* 个人信息卡片 - TDesign风格 */
.profile-card.elderly {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1), 0 4rpx 16rpx rgba(0,0,0,0.05);
  border: 1rpx solid rgba(255,255,255,0.2);
  transition: all 0.3s ease;
}

.profile-card.elderly:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.15), 0 6rpx 20rpx rgba(0,0,0,0.08);
}

.profile-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 32rpx;
}

.avatar.elderly {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
}

.health-status {
  display: flex;
  align-items: center;
  background: #f0f9ff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  color: #0369a1;
  border: 1rpx solid #bae6fd;
}

.health-indicator {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.health-indicator.good {
  background: #4CAF50;
}

.health-text {
  font-size: 24rpx;
  color: green;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  color: #333;
}

.user-tags {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.user-tag.elderly {
  background: #f0f9ff;
  color: #0369a1;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  border: 1rpx solid #bae6fd;
}

.verification-status.verified {
  color: #4CAF50;
  font-size: 24rpx;
  font-weight: 600;
}

.verification-status.unverified {
  color: #FFC107;
  font-size: 24rpx;
}

.user-contact {
  font-size: 28rpx;
  color: #666;
}

/* 时间币余额 - TDesign风格 */
.balance-section {
  margin-top: 24rpx;
}

.balance-card {
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid #e2e8f0;
}

.balance-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  color: #667eea;
}

.balance-info {
  flex: 1;
}

.balance-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.balance-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
}

.recharge-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.recharge-btn:active {
  transform: scale(0.95);
}

/* 关联卡片 - TDesign风格 */
.relation-card.elderly {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08), 0 2rpx 10rpx rgba(0,0,0,0.04);
  border: 1rpx solid rgba(255,255,255,0.2);
  transition: all 0.3s ease;
}

.relation-card.elderly:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.12), 0 4rpx 16rpx rgba(0,0,0,0.06);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.card-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

/* 卡片操作按钮区域 */
.card-actions {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.relation-count {
  font-size: 26rpx;
  color: #7f8c8d;
  background: #f8f9fa;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.bind-btn {
  background: #FF7043;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  font-weight: 600;
}

/* 家属列表 - TDesign风格 */
.family-list, .volunteer-list {
  padding: 0 32rpx;
}

.family-item, .volunteer-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.family-item:hover, .volunteer-item:hover {
  background: #f8fafc;
  padding-left: 8rpx;
  margin: 0 -8rpx;
  border-radius: 8rpx;
}

.family-item:last-child, .volunteer-item:last-child {
  border-bottom: none;
}

.family-avatar, .volunteer-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  color: white;
  margin-right: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.family-info, .volunteer-info {
  flex: 1;
}

.family-name, .volunteer-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.family-relation, .volunteer-desc {
  font-size: 26rpx;
  color: #7f8c8d;
}

.contact-btn {
  background: #f0f9ff;
  color: #0369a1;
  border: 1rpx solid #bae6fd;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.contact-btn:active {
  background: #bae6fd;
  transform: scale(0.95);
}

/* 空状态 - TDesign风格 */
.empty-family, .empty-volunteer {
  padding: 40rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #667eea;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.empty-desc {
  font-size: 26rpx;
  color: #bdc3c7;
}

/* 绑定码区域 */
.binding-section {
  padding: 30rpx;
  border-top: 2rpx solid #f5f5f5;
  text-align: center;
}

.binding-code-btn {
  background: linear-gradient(135deg, #42a5f5, #1976d2);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx;
  width: 400rpx;
}

.binding-code-btn:active {
  transform: scale(0.95);
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.binding-tip {
  font-size: 24rpx;
  color: #95a5a6;
  line-height: 1.5;
}

/* 健康档案卡片 - TDesign风格 */
.health-card.elderly {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  border: 1rpx solid rgba(255,255,255,0.2);
  transition: all 0.3s ease;
}

.health-card.elderly:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.12);
}

.health-summary {
  padding: 0 32rpx 32rpx;
}

.health-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.health-item:last-child {
  border-bottom: none;
}

.health-label {
  font-size: 28rpx;
  color: #000000;
  font-weight: 500;
}

.health-value {
  font-size: 28rpx;
  color: #666666;
  font-weight: 600;
}

.edit-btn {
  background: #f8f9fa;
  color: #6c757d;
  border: none;
  border-radius: 16rpx;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
}

/* 功能菜单 - TDesign风格 */
.menu-card.elderly {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  border: 1rpx solid rgba(255,255,255,0.2);
  transition: all 0.3s ease;
}

.menu-card.elderly:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.12);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8fafc;
  transform: scale(0.98);
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  width: 36rpx;
  text-align: center;
}

.menu-text {
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 500;
}

.menu-arrow {
  font-size: 28rpx;
  color: #bdc3c7;
}

/* 安全区域 */
.safe-area-bottom {
  height: 40rpx;
}




