/* 监控页面 - 低饱和蓝色系简约风格 */

.page {
  width: 100%;
  height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 卡片通用样式 */
.health-status-card,
.location-card,
.safety-card,
.activity-card,
.emergency-card {
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f0f4f8;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.health-status-card::before,
.location-card::before,
.safety-card::before,
.activity-card::before,
.emergency-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
  pointer-events: none;
}

.health-status-card:active::before,
.location-card:active::before,
.safety-card:active::before,
.activity-card:active::before,
.emergency-card:active::before {
  left: 100%;
}

/* 卡片标题 */
.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1565c0;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  position: relative;
}

/* 健康状态卡片 */
.health-status-card {
  background: white;
  border: 1rpx solid #f0f4f8;
}

.health-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.health-item {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  border: 1rpx solid #e2e8f0;
  transition: all 0.2s ease;
}

.health-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.health-value {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  color: #1565c0;
}

.health-value.healthy {
  color: #1565c0;
}

.health-value.normal {
  color: #5d7c9a;
}

.health-value.warning {
  color: #8b9dc3;
}

.health-label {
  font-size: 22rpx;
  color: #8b9dc3;
  font-weight: 500;
}

/* 位置信息卡片 */
.location-card {
  background: white;
  border: 1rpx solid #f0f4f8;
}

.location-info {
  margin-bottom: 20rpx;
}

.location-status {
  font-size: 26rpx;
  font-weight: 600;
  color: #1565c0;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.location-address {
  font-size: 24rpx;
  color: #5d7c9a;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.location-time {
  font-size: 22rpx;
  color: #8b9dc3;
}

.location-btn {
  width: 100%;
  padding: 16rpx;
  background: #f8fafc;
  color: #1565c0;
  border: 1rpx solid #b3e5fc;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.location-btn:active {
  transform: translateY(-1rpx);
  background: #e0f2fe;
}

/* 安全状态卡片 */
.safety-card {
  background: white;
  border: 1rpx solid #f0f4f8;
}

.safety-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.safety-item {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  border: 1rpx solid #e2e8f0;
  transition: all 0.2s ease;
}

.safety-item.safe {
  border-color: #b3e5fc;
  background: #f8fafc;
}

.safety-item.normal {
  border-color: #e2e8f0;
  background: #f8fafc;
}

.safety-item.warning {
  border-color: #e2e8f0;
  background: #f8fafc;
}

.safety-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.safety-icon {
  font-size: 36rpx;
  margin-bottom: 12rpx;
  display: block;
}

.safety-label {
  font-size: 22rpx;
  color: #5d7c9a;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.safety-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #1565c0;
}

.safety-item.safe .safety-value {
  color: #1565c0;
}

.safety-item.normal .safety-value {
  color: #5d7c9a;
}

.safety-item.warning .safety-value {
  color: #8b9dc3;
}

.safety-item.danger .safety-value {
  color: #8b9dc3;
}

/* 活动时间线卡片 */
.activity-card {
  background: white;
  border: 1rpx solid #f0f4f8;
}

.activity-timeline {
  position: relative;
}

.activity-timeline::before {
  content: '';
  position: absolute;
  left: 30rpx;
  top: 60rpx;
  bottom: 60rpx;
  width: 2rpx;
  background: #e2e8f0;
  border-radius: 1rpx;
}

.activity-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 24rpx;
  position: relative;
}

.activity-item:last-child {
  margin-bottom: 0;
}

.activity-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  position: relative;
  z-index: 2;
}

.activity-icon.sunrise {
  background: #f8fafc;
  border-color: #b3e5fc;
}

.activity-icon.cooking {
  background: #f8fafc;
  border-color: #b3e5fc;
}

.activity-icon.exercise {
  background: #f8fafc;
  border-color: #b3e5fc;
}

.activity-icon.shopping {
  background: #f8fafc;
  border-color: #b3e5fc;
}

.activity-content {
  flex: 1;
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 16rpx;
  border: 1rpx solid #e2e8f0;
}

.activity-text {
  font-size: 24rpx;
  color: #1565c0;
  margin-bottom: 6rpx;
  font-weight: 500;
  line-height: 1.4;
}

.activity-time {
  font-size: 22rpx;
  color: #8b9dc3;
  font-weight: 500;
}

/* 紧急联系卡片 */
.emergency-card {
  background: white;
  border: 1rpx solid #f0f4f8;
}

.emergency-buttons {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.emergency-btn {
  flex: 1;
  padding: 16rpx;
  border: 1rpx solid #b3e5fc;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #1565c0;
  background: #f8fafc;
  transition: all 0.2s ease;
}

.emergency-btn.call {
  background: #f8fafc;
  color: #1565c0;
}

.emergency-btn.sms {
  background: #f8fafc;
  color: #1565c0;
}

.emergency-btn:active {
  transform: translateY(-1rpx);
  background: #e0f2fe;
}

.emergency-contacts {
  border-top: 2rpx solid rgba(239, 68, 68, 0.1);
  padding-top: 32rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid rgba(239, 68, 68, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-item:active {
  transform: translateY(-2rpx) scale(1.01);
  background: rgba(239, 68, 68, 0.05);
  box-shadow: 0 8rpx 16rpx rgba(239, 68, 68, 0.15);
}

.contact-info {
  flex: 1;
}

.contact-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 6rpx;
}

.contact-phone {
  font-size: 24rpx;
  color: #6b7280;
}

.contact-action {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  box-shadow: 
    0 8rpx 16rpx rgba(239, 68, 68, 0.3),
    0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.contact-action:active {
  transform: scale(1.1);
  box-shadow: 
    0 12rpx 24rpx rgba(239, 68, 68, 0.4),
    0 6rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .health-grid,
  .safety-grid {
    grid-template-columns: 1fr;
  }
  
  .emergency-buttons {
    flex-direction: column;
  }
}

/* 动画效果 */
@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

.card-title {
  background: linear-gradient(90deg, #1f2937 25%, #4b5563 50%, #1f2937 75%);
  background-size: 200% 100%;
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: shimmer 3s infinite;
}