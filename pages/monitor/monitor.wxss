/* 监控页面样式 - 现代化美化版本 */

.page {
  width: 100%;
  height: 100vh;
  background: linear-gradient(180deg, #f8faff 0%, #f0f8ff 50%, #e6f3ff 100%);
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 40rpx 40rpx 90rpx 40rpx;
  box-sizing: border-box;
}

/* 卡片通用样式 */
.health-status-card,
.location-card,
.safety-card,
.activity-card,
.emergency-card {
  background: linear-gradient(145deg, #ffffff 0%, #fafbff 50%, #f5f8ff 100%);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  border: 2rpx solid transparent;
  background-clip: padding-box;
  box-shadow: 
    0 20rpx 60rpx rgba(22, 93, 255, 0.08),
    0 8rpx 32rpx rgba(114, 46, 209, 0.06),
    0 4rpx 16rpx rgba(0, 0, 0, 0.04),
    inset 0 2rpx 0 rgba(255, 255, 255, 0.9);
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.health-status-card::before,
.location-card::before,
.safety-card::before,
.activity-card::before,
.emergency-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
  pointer-events: none;
}

.health-status-card:active::before,
.location-card:active::before,
.safety-card:active::before,
.activity-card:active::before,
.emergency-card:active::before {
  left: 100%;
}

/* 卡片标题 */
.card-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  position: relative;
}

.card-title::after {
  content: '';
  flex: 1;
  height: 2rpx;
  background: linear-gradient(90deg, rgba(22, 93, 255, 0.2), transparent);
  margin-left: 16rpx;
}

/* 健康状态卡片 */
.health-status-card {
  background: linear-gradient(145deg, #ffffff 0%, #f0fdf4 30%, #ecfdf5 70%, #ffffff 100%);
  border: 3rpx solid rgba(34, 197, 94, 0.1);
}

.health-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.health-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 32rpx;
  text-align: center;
  border: 2rpx solid rgba(34, 197, 94, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.health-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.05), rgba(16, 185, 129, 0.03));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.health-item:active {
  transform: translateY(-4rpx) scale(1.02);
  box-shadow: 
    0 16rpx 32rpx rgba(34, 197, 94, 0.15),
    0 8rpx 16rpx rgba(0, 0, 0, 0.08);
}

.health-item:active::before {
  opacity: 1;
}

.health-value {
  font-size: 48rpx;
  font-weight: 800;
  margin-bottom: 12rpx;
  position: relative;
  z-index: 1;
}

.health-value.healthy {
  color: #22c55e;
  text-shadow: 0 4rpx 8rpx rgba(34, 197, 94, 0.2);
}

.health-value.normal {
  color: #3b82f6;
  text-shadow: 0 4rpx 8rpx rgba(59, 130, 246, 0.2);
}

.health-value.warning {
  color: #f59e0b;
  text-shadow: 0 4rpx 8rpx rgba(245, 158, 11, 0.2);
}

.health-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

/* 位置信息卡片 */
.location-card {
  background: linear-gradient(145deg, #ffffff 0%, #eff6ff 30%, #dbeafe 70%, #ffffff 100%);
  border: 3rpx solid rgba(59, 130, 246, 0.1);
}

.location-info {
  margin-bottom: 32rpx;
}

.location-status {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.location-address {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.5;
  margin-bottom: 12rpx;
  padding: 16rpx;
  background: rgba(59, 130, 246, 0.05);
  border-radius: 16rpx;
  border-left: 4rpx solid #3b82f6;
}

.location-time {
  font-size: 24rpx;
  color: #9ca3af;
  font-style: italic;
}

.location-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 
    0 12rpx 24rpx rgba(59, 130, 246, 0.3),
    0 6rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.location-btn:active {
  transform: translateY(-2rpx);
  box-shadow: 
    0 16rpx 32rpx rgba(59, 130, 246, 0.4),
    0 8rpx 16rpx rgba(0, 0, 0, 0.15);
}

/* 安全状态卡片 */
.safety-card {
  background: linear-gradient(145deg, #ffffff 0%, #fefce8 30%, #fef3c7 70%, #ffffff 100%);
  border: 3rpx solid rgba(245, 158, 11, 0.1);
}

.safety-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.safety-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  border: 2rpx solid transparent;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.safety-item.safe {
  border-color: rgba(34, 197, 94, 0.2);
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.05), rgba(255, 255, 255, 0.9));
}

.safety-item.normal {
  border-color: rgba(59, 130, 246, 0.2);
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.05), rgba(255, 255, 255, 0.9));
}

.safety-item.warning {
  border-color: rgba(245, 158, 11, 0.2);
  background: linear-gradient(135deg, rgba(245, 158, 11, 0.05), rgba(255, 255, 255, 0.9));
}

.safety-item:active {
  transform: translateY(-4rpx) scale(1.02);
}

.safety-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  display: block;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.safety-label {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.safety-value {
  font-size: 28rpx;
  font-weight: 700;
}

.safety-item.safe .safety-value {
  color: #22c55e;
}

.safety-item.normal .safety-value {
  color: #3b82f6;
}

.safety-item.warning .safety-value {
  color: #f59e0b;
}

.safety-item.danger .safety-value {
  color: #ef4444;
}

/* 活动时间线卡片 */
.activity-card {
  background: linear-gradient(145deg, #ffffff 0%, #f3e8ff 30%, #e9d5ff 70%, #ffffff 100%);
  border: 3rpx solid rgba(147, 51, 234, 0.1);
}

.activity-timeline {
  position: relative;
}

.activity-timeline::before {
  content: '';
  position: absolute;
  left: 40rpx;
  top: 80rpx;
  bottom: 80rpx;
  width: 4rpx;
  background: linear-gradient(180deg, #9333ea, #7c3aed, #6d28d9);
  border-radius: 2rpx;
}

.activity-item {
  display: flex;
  align-items: flex-start;
  gap: 32rpx;
  margin-bottom: 40rpx;
  position: relative;
}

.activity-item:last-child {
  margin-bottom: 0;
}

.activity-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: white;
  font-weight: 600;
  position: relative;
  z-index: 2;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.15);
}

.activity-icon.sunrise {
  background: linear-gradient(135deg, #f59e0b, #d97706);
}

.activity-icon.cooking {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

.activity-icon.exercise {
  background: linear-gradient(135deg, #22c55e, #16a34a);
}

.activity-icon.shopping {
  background: linear-gradient(135deg, #8b5cf6, #7c3aed);
}

.activity-content {
  flex: 1;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  padding: 24rpx;
  border: 2rpx solid rgba(147, 51, 234, 0.1);
}

.activity-text {
  font-size: 28rpx;
  color: #1f2937;
  margin-bottom: 8rpx;
  font-weight: 500;
  line-height: 1.4;
}

.activity-time {
  font-size: 24rpx;
  color: #9333ea;
  font-weight: 600;
}

/* 紧急联系卡片 */
.emergency-card {
  background: linear-gradient(145deg, #ffffff 0%, #fef2f2 30%, #fee2e2 70%, #ffffff 100%);
  border: 3rpx solid rgba(239, 68, 68, 0.1);
}

.emergency-buttons {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.emergency-btn {
  flex: 1;
  padding: 24rpx;
  border: none;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.emergency-btn.call {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

.emergency-btn.sms {
  background: linear-gradient(135deg, #f59e0b, #d97706);
}

.emergency-btn:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.15);
}

.emergency-contacts {
  border-top: 2rpx solid rgba(239, 68, 68, 0.1);
  padding-top: 32rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid rgba(239, 68, 68, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-item:active {
  transform: translateY(-2rpx) scale(1.01);
  background: rgba(239, 68, 68, 0.05);
  box-shadow: 0 8rpx 16rpx rgba(239, 68, 68, 0.15);
}

.contact-info {
  flex: 1;
}

.contact-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 6rpx;
}

.contact-phone {
  font-size: 24rpx;
  color: #6b7280;
}

.contact-action {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  box-shadow: 
    0 8rpx 16rpx rgba(239, 68, 68, 0.3),
    0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.contact-action:active {
  transform: scale(1.1);
  box-shadow: 
    0 12rpx 24rpx rgba(239, 68, 68, 0.4),
    0 6rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .health-grid,
  .safety-grid {
    grid-template-columns: 1fr;
  }
  
  .emergency-buttons {
    flex-direction: column;
  }
}

/* 动画效果 */
@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

.card-title {
  background: linear-gradient(90deg, #1f2937 25%, #4b5563 50%, #1f2937 75%);
  background-size: 200% 100%;
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: shimmer 3s infinite;
}