.page {
  width: 100%;
  height: 100vh;
  background: #ffffff;
  display: flex;
  flex-direction: column;
}

/* 导航栏 */
.navbar {
  height: 160rpx;
  padding: 40rpx 40rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  border-bottom: 2rpx solid #f0f0f0;
}

.navbar.family {
  background: #ffffff;
  color: #1d1d1f;
}

.navbar.elderly {
  background: linear-gradient(135deg, #FF8A65 0%, #FF7043 50%, #FF5722 100%);
  color: white;
  border-bottom: none;
}

.nav-title-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-title {
  font-size: 44rpx;
  font-weight: 700;
  letter-spacing: -1rpx;
}

.nav-action {
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
}

.nav-action.family {
  background: #f0f0f0;
  color: #007AFF;
}

.nav-action.elderly {
  background: rgba(255, 255, 255, 0.2);
  color: white;
}

/* 内容区域 */
.content {
  flex: 1;
  height: calc(100vh - 160rpx);
}

.content.family-ui {
  padding: 16rpx;
  background: #f8f9fa;
}

.content.elderly-ui {
  padding: 12rpx;
  background: #fff5f0;
}

/* 接单大厅卡片 */
.order-hall-card {
  background: #ffffff;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 82, 217, 0.1);
}

.order-hall-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
}

.order-hall-info {
  flex: 1;
}

.order-hall-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #1f2937;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.order-hall-subtitle {
  font-size: 26rpx;
  color: #6b7280;
}

.order-hall-stats {
  margin: 16rpx 0;
}

.order-stat {
  text-align: center;
  padding: 12rpx;
}

.order-stat-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #0052D9;
  margin-bottom: 6rpx;
}

.order-stat-label {
  font-size: 22rpx;
  color: #6b7280;
}

.order-hall-btn {
  margin-top: 16rpx;
}

/* 统计网格 */
.stats-grid {
  margin: 16rpx 0;
}

.stats-grid.elderly {
  margin: 16rpx 0;
}

/* 优化网格间距 */
.quick-actions.elderly {
  margin: 16rpx 0;
}

.stat-card {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-card.elderly {
  background: linear-gradient(135deg, #fff5f0 0%, #ffffff 100%);
  border: 1rpx solid rgba(255, 107, 53, 0.2);
  padding: 20rpx 16rpx;
  gap: 10rpx;
  min-height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  text-align: left;
}

.stat-card:active {
  transform: scale(0.98);
}

.stat-number {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
  margin: 0;
  line-height: 1;
}

.stat-label {
  font-size: 22rpx;
  font-weight: 500;
  color: #666;
  line-height: 1.2;
}

/* 老人端统计卡片中的数字和标签 */
.stat-card.elderly .stat-number {
  font-size: 36rpx;
  font-weight: 600;
  margin: 0;
  line-height: 1;
}

.stat-card.elderly .stat-label {
  font-size: 22rpx;
  margin: 0;
  line-height: 1.2;
}

/* 老人端统计卡片的内容区域 */
.stat-card.elderly .stat-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 4rpx;
  flex: 1;
}

/* 服务部分 */
.services-section {
  margin-bottom: 24rpx;
}

.service-card {
  background: #ffffff;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.service-card.completed {
  opacity: 0.9;
}

.service-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 16rpx 0 8rpx;
}

.service-info {
  flex: 1;
}

.service-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #1f2937;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.service-volunteer {
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.service-status {
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.service-status.in-progress {
  background: #165DFF;
  color: white;
}

.service-status.completed {
  background: #52C41A;
  color: white;
}

.service-description {
  font-size: 26rpx;
  color: #666;
  margin: 12rpx 0;
  line-height: 1.5;
}

.service-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 12rpx;
}

.service-time {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.contact-btn {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border: 2rpx solid #165DFF;
  color: #165DFF;
  background: transparent;
  border-radius: 16rpx;
  cursor: pointer;
}

.service-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.rating-stars {
  color: #FA8C16;
  font-size: 28rpx;
}

.rating-text {
  font-size: 24rpx;
  color: #999;
}

/* 老人端发布服务区域 */
.publish-service-card.elderly-card {
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #fff5f0 0%, #ffffff 100%);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.15);
}

.publish-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 0;
}

.publish-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.publish-subtitle {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 24rpx;
}

.publish-buttons {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.publish-btn.primary {
  --td-button-primary-bg-color: #FF6B35;
  --td-button-primary-border-color: #FF6B35;
}

.publish-btn.outline {
  --td-button-default-border-color: #FF6B35;
  color: #FF6B35;
}

.publish-tip {
  background: rgba(255, 107, 53, 0.1);
  border-radius: 12rpx;
  padding: 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.tip-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 快捷操作布局 */
.quick-actions-layout.elderly {
  margin: 16rpx 0;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.quick-actions-row {
  display: flex;
  gap: 16rpx;
  height: 120rpx;
}

/* 大按钮样式 */
.quick-action-large.elderly {
  flex: 1;
  background: #FF8A65;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(255, 138, 101, 0.3),
    0 4rpx 16rpx rgba(255, 138, 101, 0.2);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.quick-action-large.elderly.blue {
  background: #42A5F5;
  box-shadow: 
    0 8rpx 32rpx rgba(66, 165, 245, 0.3),
    0 4rpx 16rpx rgba(66, 165, 245, 0.2);
}

.quick-action-large.elderly.green {
  background: #66BB6A;
  box-shadow: 
    0 8rpx 32rpx rgba(102, 187, 106, 0.3),
    0 4rpx 16rpx rgba(102, 187, 106, 0.2);
}

.quick-action-large.elderly.pink {
  background: #EF5350;
  box-shadow: 
    0 8rpx 32rpx rgba(239, 83, 80, 0.3),
    0 4rpx 16rpx rgba(239, 83, 80, 0.2);
}

.quick-action-large.elderly:active {
  transform: scale(0.98);
}

/* 图标容器 */
.action-icon-container {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.action-icon-container .t-icon {
  color: rgba(255, 255, 255, 0.9) !important;
}

/* 文字信息 */
.action-info {
  flex: 1;
  text-align: left;
}

.action-title {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  line-height: 1.2;
}


.quick-action.elderly:active {
  transform: scale(0.95);
  box-shadow: 
    0 4rpx 16rpx rgba(255, 107, 53, 0.2),
    0 2rpx 8rpx rgba(255, 107, 53, 0.12);
}

/* 为不同服务类型添加特定背景色 */
.quick-action.elderly:before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 24rpx;
  opacity: 0.1;
  z-index: 0;
}

/* 买菜代购 - 橙色 */
.quick-action.elderly:nth-child(1):before {
  background: linear-gradient(135deg, #FF8A65, #FF7043);
}

/* 家政清洁 - 蓝色 */
.quick-action.elderly:nth-child(2):before {
  background: linear-gradient(135deg, #42A5F5, #1E88E5);
}

/* 陪同就医 - 绿色 */
.quick-action.elderly:nth-child(3):before {
  background: linear-gradient(135deg, #66BB6A, #43A047);
}

/* 情感陪伴 - 粉色 */
.quick-action.elderly:nth-child(4):before {
  background: linear-gradient(135deg, #EF5350, #E53935);
}

.quick-action-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.2;
  text-align: center;
  position: relative;
  z-index: 1;
}

/* 优化快捷操作图标 */
.quick-action.elderly .t-icon {
  position: relative;
  z-index: 1;
}

/* 为不同服务类型的图标设置颜色 */
.quick-action.elderly:nth-child(1) .t-icon {
  color: #FF7043 !important;
}

.quick-action.elderly:nth-child(2) .t-icon {
  color: #1E88E5 !important;
}

.quick-action.elderly:nth-child(3) .t-icon {
  color: #43A047 !important;
}

.quick-action.elderly:nth-child(4) .t-icon {
  color: #E53935 !important;
}

/* 全局TDesign按钮图标修复 */
.t-button .t-button__content {
  display: flex !important;
  flex-direction: row !important;
  align-items: center !important;
  justify-content: center !important;
  gap: 8rpx !important;
}

.t-button .t-icon {
  margin: 0 !important;
  flex-shrink: 0 !important;
}