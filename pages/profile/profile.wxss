/* 个人中心页面样式 */

.page-container {
  width: 100%;
  max-width: 100vw;
  height: 100vh;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 内容区域 */
.content {
  flex: 1;
  width: 100%;
  max-width: 100vw;
  padding: 20rpx 20rpx 120rpx 20rpx;
  box-sizing: border-box;
}

.content.family-ui {
  padding-bottom: 140rpx;
}

.content.elderly-ui {
  padding-bottom: 160rpx;
}

/* 个人信息卡片 */
.profile-card {
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 48rpx;
  border: 2rpx solid rgba(22, 93, 255, 0.1);
  box-shadow: 
    0 8rpx 32rpx rgba(22, 93, 255, 0.08),
    0 4rpx 16rpx rgba(114, 46, 209, 0.06),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  box-sizing: border-box;
}

.profile-card.family {
  background: linear-gradient(135deg, #ffffff 0%, #f8faff 50%, #f0f8ff 100%);
}

.profile-card.elderly {
  background: linear-gradient(135deg, #ffffff 0%, #fff8f5 50%, #fff5f0 100%);
  border: 4rpx solid transparent;
  background-clip: padding-box;
  box-shadow: 
    0 40rpx 120rpx rgba(255, 138, 101, 0.12),
    0 16rpx 64rpx rgba(255, 112, 67, 0.08),
    0 8rpx 32rpx rgba(0, 0, 0, 0.06),
    inset 0 4rpx 0 rgba(255, 255, 255, 0.8);
}

.profile-info {
  display: flex;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 600;
  color: white;
}

.avatar.family {
  background: linear-gradient(135deg, #165DFF, #722ED1);
}

.avatar.elderly {
  background: linear-gradient(135deg, #FF8A65, #FF7043);
}

.user-info {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #1f2937;
}

.user-tags {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.user-tag {
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: white;
}

.user-tag.family {
  background: #165DFF;
}

.user-tag.elderly {
  background: #f97316;
}

.user-desc {
  font-size: 28rpx;
  color: #666;
}

.user-meta {
  font-size: 24rpx;
  color: #999;
}

.bind-code {
  font-weight: 600;
  color: #f97316;
}

.edit-btn {
  width: 100%;
  padding: 24rpx;
  background: transparent;
  border: 2rpx solid #165DFF;
  color: #165DFF;
  border-radius: 16rpx;
  font-size: 28rpx;
  cursor: pointer;
  transition: all 0.2s ease;
}

.edit-btn:active {
  background: #165DFF;
  color: white;
}

/* 统计卡片 */
.stats-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8faff 50%, #f0f8ff 100%);
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 48rpx;
  border: 2rpx solid rgba(22, 93, 255, 0.1);
  box-shadow: 
    0 8rpx 32rpx rgba(22, 93, 255, 0.08),
    0 4rpx 16rpx rgba(114, 46, 209, 0.06),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  box-sizing: border-box;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
  color: #1f2937;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.stat-item {
  background: #f0f9ff;
  border-radius: 24rpx;
  padding: 32rpx;
  text-align: center;
  border: 4rpx solid #dbeafe;
  box-sizing: border-box;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #165DFF;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

/* 关联卡片 */
.relation-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8faff 50%, #f0f8ff 100%);
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 48rpx;
  border: 2rpx solid rgba(22, 93, 255, 0.1);
  box-shadow: 
    0 8rpx 32rpx rgba(22, 93, 255, 0.08),
    0 4rpx 16rpx rgba(114, 46, 209, 0.06),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  box-sizing: border-box;
}

.relation-card.elderly {
  background: linear-gradient(135deg, #ffffff 0%, #fff8f5 50%, #fff5f0 100%);
  border: 4rpx solid transparent;
  background-clip: padding-box;
  box-shadow: 
    0 40rpx 120rpx rgba(255, 138, 101, 0.12),
    0 16rpx 64rpx rgba(255, 112, 67, 0.08),
    0 8rpx 32rpx rgba(0, 0, 0, 0.06),
    inset 0 4rpx 0 rgba(255, 255, 255, 0.8);
}

.relation-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
  gap: 20rpx;
}

.relation-header .card-title {
  flex: 1;
  margin-bottom: 0;
}

.bind-btn {
  background: linear-gradient(135deg, #165DFF, #0040CC);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  font-weight: 500;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 
    0 4rpx 12rpx rgba(22, 93, 255, 0.3),
    0 2rpx 6rpx rgba(22, 93, 255, 0.2);
  transition: all 0.3s ease;
  min-width: 120rpx;
  justify-content: center;
}

.bind-btn:active {
  background: linear-gradient(135deg, #0040CC, #003399);
  transform: translateY(1rpx);
  box-shadow: 
    0 2rpx 8rpx rgba(22, 93, 255, 0.4),
    0 1rpx 3rpx rgba(22, 93, 255, 0.3);
}

.relation-count {
  font-size: 28rpx;
  color: #6b7280;
}

.elder-item,
.family-item {
  background: #f8f9fa;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-sizing: border-box;
}

.family-item {
  background: rgba(249, 115, 22, 0.1);
}

.elder-avatar,
.family-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.elder-avatar {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.family-avatar {
  background: linear-gradient(135deg, #165DFF, #722ED1);
}

.elder-info,
.family-info {
  flex: 1;
}

.elder-name,
.family-name {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
  color: #1f2937;
}

.elder-contact,
.family-desc {
  font-size: 24rpx;
  color: #6b7280;
}

.manage-btn {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border: 2rpx solid #165DFF;
  color: #165DFF;
  background: transparent;
  border-radius: 16rpx;
  cursor: pointer;
}

.contact-btn {
  background: #f97316;
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  cursor: pointer;
}

.binding-code-section {
  text-align: center;
  margin-top: 32rpx;
}

.binding-code-btn {
  background: transparent;
  color: #f97316;
  border: 4rpx solid #f97316;
  border-radius: 16rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  cursor: pointer;
}

/* 功能菜单 */
.menu-card {
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  border: 2rpx solid rgba(22, 93, 255, 0.1);
  box-shadow: 
    0 8rpx 32rpx rgba(22, 93, 255, 0.08),
    0 4rpx 16rpx rgba(114, 46, 209, 0.06),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  box-sizing: border-box;
}

.menu-card.family {
  background: linear-gradient(135deg, #ffffff 0%, #f8faff 50%, #f0f8ff 100%);
}

.menu-card.elderly {
  background: linear-gradient(145deg, #ffffff 0%, #fff8f5 80%, #fff5f0 100%);
  border: 4rpx solid rgba(255, 138, 101, 0.08);
  box-shadow: 
    0 40rpx 120rpx rgba(255, 138, 101, 0.08),
    0 20rpx 64rpx rgba(255, 112, 67, 0.05),
    0 8rpx 32rpx rgba(0, 0, 0, 0.03),
    inset 0 4rpx 0 rgba(255, 255, 255, 0.8);
}

.menu-item {
  padding: 32rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
  transition: all 0.2s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(22, 93, 255, 0.05);
  margin: 0 -28rpx;
  padding-left: 28rpx;
  padding-right: 28rpx;
  border-radius: 12rpx;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.menu-icon {
  font-size: 40rpx;
}

.menu-text {
  font-size: 32rpx;
  color: #1f2937;
}

.logout-text {
  color: #F5222D;
}

.menu-arrow {
  color: #999;
  font-size: 28rpx;
}

/* ========== TDesign组件样式 ========== */

/* 头像样式 */
.avatar.family {
  --td-avatar-bg-color: linear-gradient(135deg, #165DFF, #722ED1);
}

.avatar.elderly {
  --td-avatar-bg-color: linear-gradient(135deg, #FF8A65, #FF7043);
}

/* 标签样式 */
.user-tags {
  display: flex;
  gap: 16rpx;
  margin: 12rpx 0;
}

.user-tag {
  margin-right: 8rpx;
}

.verify-tag {
  margin-left: 8rpx;
}

/* 用户信息图标 */
.user-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-wrap: wrap;
  margin-top: 8rpx;
}

/* 卡片标题图标 */
.card-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 24rpx;
}

/* 功能菜单 - t-cell-group */
.menu-card {
  background: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 
    0 8rpx 32rpx rgba(22, 93, 255, 0.08),
    0 4rpx 16rpx rgba(114, 46, 209, 0.06),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.menu-card.elderly {
  box-shadow: 
    0 40rpx 120rpx rgba(255, 138, 101, 0.12),
    0 16rpx 64rpx rgba(255, 112, 67, 0.08),
    0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

/* 退出登录单元格特殊样式 */
.logout-cell {
  --td-cell-title-color: #F5222D;
}

/* 按钮样式适配 */
.edit-btn {
  width: 100%;
  margin-top: 16rpx;
}

.manage-btn, .contact-btn {
  border-radius: 18rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 6rpx;
  min-width: 100rpx;
  justify-content: center;
}

.manage-btn {
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  color: #495057;
  border: 1rpx solid #dee2e6;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.manage-btn:active {
  background: linear-gradient(135deg, #e9ecef, #dee2e6);
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.contact-btn {
  background: linear-gradient(135deg, #FF6B35, #E85D22);
  color: white;
  border: none;
  box-shadow: 
    0 3rpx 8rpx rgba(255, 107, 53, 0.3),
    0 1rpx 4rpx rgba(255, 107, 53, 0.2);
}

.contact-btn:active {
  background: linear-gradient(135deg, #E85D22, #D14A12);
  transform: translateY(1rpx);
  box-shadow: 
    0 2rpx 6rpx rgba(255, 107, 53, 0.4),
    0 1rpx 3rpx rgba(255, 107, 53, 0.3);
}

.binding-code-btn {
  width: 100%;
  margin-top: 20rpx;
}

/* 提示图标样式 */
.tip-icon {
  margin-right: 12rpx;
}

/* 全局TDesign按钮图标修复 */
.t-button .t-button__content {
  display: flex !important;
  flex-direction: row !important;
  align-items: center !important;
  justify-content: center !important;
  gap: 8rpx !important;
}

.t-button .t-icon {
  margin: 0 !important;
  flex-shrink: 0 !important;
}