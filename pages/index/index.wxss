  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.actions-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.action-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx;
  background: #f8f9ff;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.action-button:active {
  transform: scale(0.95);
  background: #f0f1ff;
}

.action-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon.primary {
  background: linear-gradient(135deg, #0052D9, #4dabf7);
}

.action-icon.success {
  background: linear-gradient(135deg, #00a870, #51cf66);
}

.action-icon.warning {
  background: linear-gradient(135deg, #ed7b2f, #ffa940);
}

.action-icon.info {
  background: linear-gradient(135deg, #1890ff, #69c0ff);
}

.action-text {
  font-size: 24rpx;
  color: #1d1d1f;
  font-weight: 500;
}

/* 活动区域 */
.activity-section {
  margin: 16rpx;
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.refresh-btn {
  font-size: 24rpx;
  color: #0052D9;
  padding: 8rpx 16rpx;
  background: rgba(0, 82, 217, 0.1);
  border-radius: 20rpx;
}

.activity-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.activity-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 12rpx 0;
}

.activity-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-top: 6rpx;
  flex-shrink: 0;
}

.activity-dot.chat {
  background: #0052D9;
}

.activity-dot.success {
  background: #00a870;
}

.activity-dot.money {
  background: #ed7b2f;
}

.activity-dot.service {
  background: #1890ff;
}

.activity-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.activity-text {
  font-size: 26rpx;
  color: #1d1d1f;
  line-height: 1.4;
}

.activity-time {
  font-size: 22rpx;
  color: #999;
}

/* 老人端欢迎区域 */
.elderly-welcome-section {
  background: linear-gradient(135deg, #FF6B35, #FF8A65);
  border-radius: 16rpx;
  margin: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.3);
}

.elderly-user-info {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  gap: 20rpx;
}

.elderly-avatar {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  flex-shrink: 0;
  width: 80rpx;
  height: 80rpx;
}

.elderly-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
  gap: 8rpx;
}

.elderly-welcome {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
}

.elderly-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.weather-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.weather-text {
  font-size: 22rpx;
  color: white;
  font-weight: 500;
}