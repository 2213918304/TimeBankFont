/* 志愿者端首页 - 低饱和蓝色系简约风格 */
.page-container {
  width: 100vw;
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  position: relative;
  overflow-x: hidden;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 卡片基础样式 */
.t-card {
  margin: 20rpx 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  background: white;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.t-card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.12);
}

/* 欢迎卡片样式 */
.welcome-card .card-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #e0f2fe 0%, #b3e5fc 100%);
  border-radius: 20rpx 20rpx 0 0;
}

.header-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.welcome-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #1565c0;
}

.subtitle-text {
  font-size: 28rpx;
  color: #5d7c9a;
}

/* 统计网格样式 */
.stats-grid {
  margin: 20rpx 24rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  padding: 24rpx;
}

.stat-item {
  padding: 20rpx;
  border-radius: 16rpx;
  background: #f8fafc;
  margin-bottom: 16rpx;
  transition: all 0.2s ease;
}

.stat-item:last-child {
  margin-bottom: 0;
}

.stat-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #1565c0;
  line-height: 1;
}

.stat-label {
  font-size: 26rpx;
  color: #5d7c9a;
  line-height: 1;
}

/* 快捷操作样式 */
.quick-actions-card {
  margin: 20rpx 24rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  padding: 24rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  background: #f8fafc;
  margin-bottom: 16rpx;
  transition: all 0.2s ease;
}

.action-item:last-child {
  margin-bottom: 0;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #e0f2fe 0%, #b3e5fc 100%);
}

.action-icon.primary {
  background: linear-gradient(135deg, #0052d9, #4dabf7);
}

.action-icon.success {
  background: linear-gradient(135deg, #00a870, #51cf66);
}

.action-icon.warning {
  background: linear-gradient(135deg, #ed7b2f, #ffa940);
}

.action-text {
  font-size: 26rpx;
  color: #262626;
  text-align: center;
  line-height: 1.2;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 16rpx 16rpx 120rpx 16rpx;
  max-width: 100vw;
  box-sizing: border-box;
}

.elderly-ui .content {
  padding: 16rpx 16rpx 140rpx 16rpx;
}

/* 家属端UI */
.family-ui {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 老人端UI */
.elderly-ui {
