/* 登录页面整体样式 */
.login-page {
	width: 100%;
	min-height: 100vh;
  background: #f5f5f5;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 60rpx 32rpx;
  padding-top: calc(60rpx + constant(safe-area-inset-top));
  padding-top: calc(60rpx + env(safe-area-inset-top));
  box-sizing: border-box;
}

/* 品牌头部区域 */
.brand-header {
  margin-top: 70rpx;
  text-align: center;
  padding: 60rpx 40rpx 48rpx;
  background: linear-gradient(135deg, #4464f3 0%, #6765f1 40%, #02ff4e 100%);
  color: white;
	position: relative;
	overflow: hidden;
  border-radius: 24rpx 24rpx 0 0;
  width: 100%;
  max-width: 640rpx;
}

.brand-header::before {
  content: '';
	position: absolute;
	top: 0;
	left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
              radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.08) 0%, transparent 50%);
	z-index: 1;
}

.brand-logo {
  position: relative;
  z-index: 2;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.15);
	border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  animation: gentleFloat 3s ease-in-out infinite;
}

.brand-title {
  font-size: 38rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
  position: relative;
  z-index: 2;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  letter-spacing: 2rpx;
}

.brand-subtitle {
  font-size: 24rpx;
  opacity: 0.85;
  position: relative;
  z-index: 2;
  font-weight: 300;
  letter-spacing: 1rpx;
}

@keyframes gentleFloat {
	0%, 100% {
    transform: translateY(0rpx);
	}
	50% {
    transform: translateY(-8rpx);
  }
}

/* 登录卡片 */
.login-card {
  margin: 0;
  background: white;
  border-radius: 0 0 24rpx 24rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  width: 100%;
  max-width: 640rpx;
}

.card-header {
  padding: 48rpx 40rpx 32rpx;
	text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #262626;
  display: block;
  margin-bottom: 12rpx;
}

.card-subtitle {
  font-size: 28rpx;
  color: #8b8b8b;
  display: block;
}

/* 表单容器 */
.form-container {
  padding: 40rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

/* 表单选项行 */
.form-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
	margin-bottom: 40rpx;
  padding: 0 8rpx;
}

.forgot-password {
  font-size: 28rpx;
  color: #0052d9;
  cursor: pointer;
  transition: opacity 0.3s ease;
}

.forgot-password:active {
  opacity: 0.7;
}

/* 快速登录 */
.quick-login {
  margin-top: 48rpx;
  padding-top: 32rpx;
}

.divider {
  text-align: center;
  position: relative;
  margin-bottom: 32rpx;
}

.divider::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1rpx;
  background: #e7e7e7;
  z-index: 1;
}

.divider text {
  background: white;
  padding: 0 24rpx;
	font-size: 24rpx;
  color: #8b8b8b;
  position: relative;
  z-index: 2;
}

.quick-methods {
  display: flex;
  justify-content: center;
  gap: 64rpx;
}

.quick-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  border-radius: 12rpx;
}

.quick-item:active {
  background: #f5f5f5;
  transform: scale(0.95);
}

.quick-item text {
  font-size: 24rpx;
  color: #666;
  margin-top: 12rpx;
}

/* 底部区域 */
.bottom-section {
  padding: 32rpx 40rpx;
  padding-bottom: calc(32rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  text-align: center;
  width: 100%;
  max-width: 640rpx;
}

.register-tip {
	margin-bottom: 24rpx;
}

.register-tip text {
  font-size: 28rpx;
  color: #666;
}

.register-link {
  color: #0052d9 !important;
  font-weight: 500;
  margin-left: 8rpx;
	cursor: pointer;
}

.register-link:active {
  opacity: 0.7;
}

.terms {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.terms-link {
  color: #0052d9 !important;
  cursor: pointer;
  margin: 0 4rpx;
}

.terms-link:active {
  opacity: 0.7;
}

/* 加载内容 */
.loading-content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

/* TDesign组件样式覆写 */
.t-input {
  margin-bottom: 8rpx;
}

.t-checkbox {
  font-size: 28rpx;
}

.t-button {
  height: 88rpx !important;
  border-radius: 12rpx !important;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .login-page {
    padding: 40rpx 24rpx;
  }
  
  .form-container {
    padding: 32rpx 24rpx;
  }
  
  .brand-header {
    padding: 48rpx 32rpx 40rpx;
  }
  
  .brand-title {
    font-size: 34rpx;
  }
  
  .brand-subtitle {
    font-size: 22rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .login-card {
    background: #1a1a1a;
    color: white;
  }
  
  .card-header {
    border-bottom-color: #333;
  }
  
  .card-title {
    color: white;
  }
  
  .divider::before {
    background: #333;
  }
  
  .divider text {
    background: #1a1a1a;
  }
}

/* 动画效果 */
.login-card {
  animation: slideUp 0.4s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 无障碍访问优化 */
.quick-item:focus,
.register-link:focus,
.terms-link:focus,
.forgot-password:focus {
  outline: 2rpx solid #0052d9;
  outline-offset: 2rpx;
}
