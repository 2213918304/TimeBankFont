/* 个人信息编辑页面样式 */
.page-container {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
}

.content {
  height: calc(100vh - 160rpx);
  padding: 20rpx;
  box-sizing: border-box;
}

/* 头像编辑区域 */
.avatar-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 30rpx;
}

.avatar-container {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar.elderly {
  background: linear-gradient(135deg, #FF8A65, #FF7043);
}

.avatar.family {
  background: linear-gradient(135deg, #42a5f5, #1976d2);
}

.change-avatar-btn {
  background: #f8f9fa;
  color: #6c757d;
  border: 2rpx solid #dee2e6;
  border-radius: 20rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.change-avatar-btn:active {
  background: #e9ecef;
}

/* 表单区域 */
.form-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #2c3e50;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #007AFF;
  background: white;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #2c3e50;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #007AFF;
  background: white;
}

/* 性别选择器 */
.gender-selector {
  display: flex;
  gap: 20rpx;
}

.gender-option {
  flex: 1;
  height: 80rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #6c757d;
  transition: all 0.3s ease;
}

.gender-option.selected {
  background: #007AFF;
  border-color: #007AFF;
  color: white;
  transform: scale(1.02);
}

.gender-option:active {
  transform: scale(0.98);
}

/* 地区选择器 */
.region-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 0 24rpx;
}

.region-text {
  font-size: 28rpx;
  color: #2c3e50;
}

.region-text.placeholder {
  color: #adb5bd;
}

.arrow {
  font-size: 24rpx;
  color: #adb5bd;
}

/* 专长选择器 */
.specialty-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.specialty-option {
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #6c757d;
  transition: all 0.3s ease;
}

.specialty-option.selected {
  background: #007AFF;
  border-color: #007AFF;
  color: white;
  transform: scale(1.05);
}

.specialty-option:active {
  transform: scale(0.95);
}

/* 时间选择器 */
.time-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.time-option {
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #6c757d;
  transition: all 0.3s ease;
}

.time-option.selected {
  background: #28a745;
  border-color: #28a745;
  color: white;
  transform: scale(1.05);
}

.time-option:active {
  transform: scale(0.95);
}

/* 提交按钮区域 */
.submit-section {
  padding: 40rpx 0;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  border: none;
  transition: all 0.3s ease;
}

.submit-btn.elderly {
  background: linear-gradient(135deg, #FF8A65, #FF7043);
  box-shadow: 0 6rpx 20rpx rgba(255, 87, 34, 0.3);
}

.submit-btn.family {
  background: linear-gradient(135deg, #42a5f5, #1976d2);
  box-shadow: 0 6rpx 20rpx rgba(25, 118, 210, 0.3);
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.2);
}

.submit-btn[disabled] {
  background: #adb5bd !important;
  box-shadow: none !important;
  transform: none !important;
}

/* 安全区域 */
.safe-area-bottom {
  height: 40rpx;
}

/* 老人端特殊样式 */
.page-container.elderly .form-input,
.page-container.elderly .form-textarea {
  font-size: 32rpx;
  height: 88rpx;
  min-height: 132rpx;
}

.page-container.elderly .form-label {
  font-size: 32rpx;
}

.page-container.elderly .gender-option,
.page-container.elderly .specialty-option,
.page-container.elderly .time-option {
  font-size: 30rpx;
  padding: 20rpx 28rpx;
}

.page-container.elderly .section-title {
  font-size: 36rpx;
}

/* 响应式适配 */
@media (max-width: 320px) {
  .avatar-container {
    flex-direction: column;
    text-align: center;
  }
  
  .gender-selector {
    flex-direction: column;
  }
  
  .specialty-selector,
  .time-selector {
    justify-content: center;
  }
}




