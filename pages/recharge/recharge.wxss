/* 时间币充值页面 - TDesign风格 */

.page-container {
  width: 100%;
  max-width: 100vw;
  height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 内容区域 */
.content {
  flex: 1;
  width: 100%;
  max-width: 100vw;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 余额部分 */
.balance-section {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.balance-card {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f4f8;
  box-sizing: border-box;
}

.balance-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 8rpx;
}

.balance-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #8b9dc3;
}

/* 充值卡片 */
.recharge-card {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f4f8;
  box-sizing: border-box;
}

.recharge-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: #333;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.recharge-subtitle {
  font-size: 24rpx;
  color: #8b9dc3;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.recharge-options {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.recharge-option {
  background: #f8fafc;
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 20rpx;
  cursor: pointer;
  transition: all 0.2s ease;
  position: relative;
  box-sizing: border-box;
  text-align: center;
}

.recharge-option.selected {
  background: #e0f2fe;
  border-color: #bae6fd;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.15);
}

.option-amount {
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 6rpx;
  color: #667eea;
}

.option-label {
  font-size: 22rpx;
  color: #8b9dc3;
}

.option-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #667eea;
  color: white;
  font-size: 18rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

/* 信息卡片 */
.info-card {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f4f8;
  box-sizing: border-box;
}

.info-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #333;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.info-content {
  color: #8b9dc3;
  font-size: 24rpx;
  line-height: 1.6;
}

.info-item {
  margin-bottom: 8rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

/* 充值按钮 */
.recharge-btn {
  width: 100%;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  box-sizing: border-box;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
}

.recharge-btn:active {
  transform: translateY(-1rpx);
  box-shadow: 0 6rpx 24rpx rgba(102, 126, 234, 0.4);
}