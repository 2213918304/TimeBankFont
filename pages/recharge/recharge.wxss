/* 时间币充值页面样式 */

.page-container {
  width: 100%;
  max-width: 100vw;
  height: 100vh;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 内容区域 */
.content {
  flex: 1;
  width: 100%;
  max-width: 100vw;
  padding: 40rpx 40rpx 160rpx 40rpx;
  box-sizing: border-box;
}

/* 余额部分 */
.balance-section {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
  margin-bottom: 48rpx;
}

.balance-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8faff 50%, #f0f8ff 100%);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  text-align: center;
  border: 2rpx solid rgba(22, 93, 255, 0.1);
  box-shadow: 
    0 8rpx 32rpx rgba(22, 93, 255, 0.08),
    0 4rpx 16rpx rgba(114, 46, 209, 0.06),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  box-sizing: border-box;
}

.balance-number {
  font-size: 64rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #165DFF 0%, #722ED1 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  letter-spacing: -1rpx;
  margin-bottom: 8rpx;
}

.balance-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #666;
  letter-spacing: 0.5rpx;
}

/* 充值卡片 */
.recharge-card {
  background: linear-gradient(135deg, #165DFF 0%, #722ED1 50%, #EB2F96 100%);
  color: white;
  border-radius: 32rpx;
  padding: 48rpx;
  margin-bottom: 48rpx;
  text-align: center;
  box-sizing: border-box;
}

.recharge-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.recharge-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.recharge-options {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.recharge-option {
  background: rgba(255, 255, 255, 0.15);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  cursor: pointer;
  transition: all 0.2s ease;
  position: relative;
  box-sizing: border-box;
}

.recharge-option.selected {
  background: rgba(255, 255, 255, 0.25);
  border-color: rgba(255, 255, 255, 0.5);
  transform: scale(1.05);
}

.option-amount {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.option-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.option-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #FF4D4F;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 信息卡片 */
.info-card {
  background: white;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 48rpx;
  border: 2rpx solid #f0f0f0;
  box-sizing: border-box;
}

.info-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #1f2937;
}

.info-content {
  color: #666;
  font-size: 28rpx;
  line-height: 1.6;
}

.info-item {
  margin-bottom: 12rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

/* 充值按钮 */
.recharge-btn {
  width: 100%;
  padding: 32rpx;
  background: #165DFF;
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 36rpx;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  box-sizing: border-box;
}

.recharge-btn:active {
  transform: scale(0.98);
}