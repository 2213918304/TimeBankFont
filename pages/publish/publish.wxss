/* 发布服务需求页面样式 */

.page-container {
  width: 100%;
  max-width: 100vw;
  height: 100vh;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 内容区域 */
.content {
  flex: 1;
  width: 100%;
  max-width: 100vw;
  padding: 40rpx 40rpx 160rpx 40rpx;
  box-sizing: border-box;
  background: #ffffff;
}

/* 提示卡片 */
.tip-card {
  background: linear-gradient(135deg, #165DFF 0%, #722ED1 50%, #EB2F96 100%);
  color: white;
  border-radius: 32rpx;
  padding: 48rpx;
  margin-bottom: 48rpx;
  text-align: center;
  box-sizing: border-box;
}

.tip-card.elderly {
  background: linear-gradient(135deg, #FF8A65 0%, #FF7043 50%, #FF5722 100%);
}

.tip-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.tip-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 表单容器 */
.form-container {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  border: 2rpx solid #f0f0f0;
  box-sizing: border-box;
}

.form-container.elderly {
  background: linear-gradient(135deg, #ffffff 0%, #fff8f5 50%, #fff5f0 100%);
  border: 2rpx solid rgba(255, 138, 101, 0.1);
  box-shadow: 
    0 8rpx 32rpx rgba(255, 138, 101, 0.08),
    0 4rpx 16rpx rgba(255, 112, 67, 0.06),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.form-group {
  margin-bottom: 40rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 28rpx;
  background: #ffffff;
  box-sizing: border-box;
}

.form-input.elderly {
  border: 2rpx solid rgba(255, 138, 101, 0.2);
  background: rgba(255, 255, 255, 0.8);
}

.form-input:focus {
  border-color: #165DFF;
  outline: none;
}

.form-input.elderly:focus {
  border-color: #FF8A65;
}

.form-textarea {
  height: 200rpx;
  resize: none;
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #1f2937;
  cursor: pointer;
}

.picker::after {
  content: '>';
  color: #9ca3af;
  font-size: 24rpx;
}

.submit-btn {
  width: 100%;
  padding: 32rpx;
  background: #165DFF;
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 36rpx;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  margin-top: 40rpx;
  box-sizing: border-box;
}

.submit-btn.elderly {
  background: #FF8A65;
}

.submit-btn:active {
  transform: scale(0.98);
}

.submit-btn:disabled {
  background: #d1d5db !important;
  color: #9ca3af !important;
  cursor: not-allowed;
}

/* 语音发布样式 */
.voice-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  min-height: 60vh;
  padding: 40rpx;
  box-sizing: border-box;
}

.voice-tip {
  margin-bottom: 80rpx;
}

.voice-title {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #1d1d1f;
}

.voice-subtitle {
  font-size: 36rpx;
  color: #666;
  line-height: 1.5;
}

.voice-button-container {
  margin-bottom: 80rpx;
}

.voice-button {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF8A65, #FF7043);
  color: white;
  border: none;
  font-size: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 32rpx rgba(255, 138, 101, 0.3);
}

.voice-button.recording {
  background: linear-gradient(135deg, #F5222D, #FF4D4F);
  animation: pulse 1s infinite;
  transform: scale(1.1);
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(255, 138, 101, 0.4);
  }
  70% {
    box-shadow: 0 0 0 20rpx rgba(255, 138, 101, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(255, 138, 101, 0);
  }
}

.voice-status {
  margin-top: 40rpx;
  color: #666;
  font-size: 32rpx;
}

.quick-services {
  width: 100%;
}

.quick-title {
  font-size: 36rpx;
  margin-bottom: 32rpx;
  color: #1d1d1f;
  font-weight: 600;
}

.quick-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.quick-btn {
  padding: 32rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fff8f5 50%, #fff5f0 100%);
  border: 2rpx solid rgba(255, 138, 101, 0.2);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #FF8A65;
  cursor: pointer;
  transition: all 0.2s ease;
}

.quick-btn:active {
  transform: scale(0.98);
  background: rgba(255, 138, 101, 0.1);
}

/* 自定义地址输入框 */
.custom-address {
  margin-top: 24rpx;
}

/* 紧急程度选择 */
.urgency-options {
  display: flex;
  gap: 24rpx;
  margin-top: 16rpx;
}

.urgency-option {
  flex: 1;
  padding: 24rpx 16rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  text-align: center;
  cursor: pointer;
  transition: all 0.2s ease;
}

.urgency-option.active {
  border-color: #165DFF;
  background: #f0f5ff;
}

.urgency-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.urgency-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 预览卡片 */
.preview-card {
  background: #f8f9fa;
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 32rpx 0;
  box-sizing: border-box;
}

.preview-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 24rpx;
}

.preview-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.preview-item {
  display: flex;
  align-items: center;
}

.preview-label {
  font-size: 28rpx;
  color: #666;
  min-width: 160rpx;
}

.preview-value {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.preview-value.reward {
  color: #165DFF;
  font-weight: 600;
}

.preview-value.normal {
  color: #10b981;
}

.preview-value.urgent {
  color: #f59e0b;
}

.preview-value.emergency {
  color: #ef4444;
}

/* 快捷操作按钮布局 */
.quick-actions-layout.elderly {
  margin-top: 32rpx;
}

.quick-actions-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.quick-actions-row:last-child {
  margin-bottom: 0;
}

.quick-action-large.elderly {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 32rpx 24rpx;
  border-radius: 24rpx;
  color: white;
  font-weight: 600;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  min-height: 120rpx;
  background: linear-gradient(135deg, #FF8A65 0%, #FF7043 100%);
}

.quick-action-large.elderly:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.quick-action-large.elderly.blue {
  background: linear-gradient(135deg, #40A9FF 0%, #1890FF 100%);
}

.quick-action-large.elderly.green {
  background: linear-gradient(135deg, #73D13D 0%, #52C41A 100%);
}

.quick-action-large.elderly.pink {
  background: linear-gradient(135deg, #FF85C0 0%, #F759AB 100%);
}

.action-icon-container {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.action-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.action-title {
  font-size: 30rpx;
  font-weight: 600;
  color: white;
  line-height: 1.2;
}