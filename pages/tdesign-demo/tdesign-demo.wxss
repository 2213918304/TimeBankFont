.container {
  padding: 32rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.demo-section {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  text-align: center;
}

.demo-block {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.demo-block:last-child {
  border-bottom: none;
}

.block-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tag-group {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.avatar-group {
  display: flex;
  gap: 24rpx;
  align-items: center;
}

.icon-group {
  display: flex;
  gap: 24rpx;
  align-items: center;
}

.loading-group {
  display: flex;
  gap: 32rpx;
  align-items: center;
}

.switch-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.switch-item text {
  font-size: 28rpx;
  color: #333;
}

