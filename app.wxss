/**app.wxss**/
/* 全局重置和基础样式 */
page {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  background: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  color: #1d1d1f;
  line-height: 1.5;
  overflow-x: hidden;
}

/* 全局盒模型 */
view, text, image, button {
  box-sizing: border-box;
}


/* 页面容器样式 */
.page {
  width: 100vw;
  height: 100vh;
  max-width: 100vw;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
  box-sizing: border-box;
}

/* 内容区域 */
.content {
  flex: 1;
  width: 100%;
  max-width: 100vw;
  padding: 20rpx;
  box-sizing: border-box;
  overflow-x: hidden;
  overflow-y: auto;
}

/* 通用容器 */
.container {
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
  padding: 0 20rpx;
  box-sizing: border-box;
}

/* 按钮样式 */
.btn {
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx 48rpx;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #165DFF 0%, #722ED1 100%);
  color: white;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #165DFF;
  color: #165DFF;
}

.btn-elderly {
  background: linear-gradient(135deg, #FF8A65 0%, #FF7043 100%);
  color: white;
}

/* 输入框样式 */
.form-input {
  width: 100%;
  height: 96rpx;
  padding: 0 32rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  font-size: 32rpx;
  background: #fff;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #165DFF;
}

.form-input.error {
  border-color: #ff4d4f;
  background: #fff2f0;
}

/* 错误提示 */
.error-tip {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-top: 8rpx;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,.08);
  margin-bottom: 32rpx;
}

/* 导航栏样式 */
.navbar {
  width: 100%;
  max-width: 100vw;
  height: 120rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  border-bottom: 2rpx solid #f0f0f0;
  box-sizing: border-box;
  flex-shrink: 0;
}

.navbar.family {
  background: #ffffff;
  color: #1d1d1f;
}

.navbar.elderly {
  background: linear-gradient(135deg, #FF8A65 0%, #FF7043 50%, #FF5722 100%);
  color: white;
  border-bottom: none;
}

.nav-title-container {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: -1rpx;
  text-align: center;
}

.nav-subtitle {
  font-size: 24rpx;
  opacity: 0.8;
  text-align: center;
}

.nav-action {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  min-width: 64rpx;
  text-align: center;
  flex-shrink: 0;
}

/* 工具类 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.mb-0 { margin-bottom: 0; }
.mb-1 { margin-bottom: 16rpx; }
.mb-2 { margin-bottom: 32rpx; }
.mb-3 { margin-bottom: 48rpx; }

.mt-0 { margin-top: 0; }
.mt-1 { margin-top: 16rpx; }
.mt-2 { margin-top: 32rpx; }
.mt-3 { margin-top: 48rpx; }

.p-0 { padding: 0; }
.p-1 { padding: 16rpx; }
.p-2 { padding: 32rpx; }
.p-3 { padding: 48rpx; }

.flex { display: flex; }
.flex-column { flex-direction: column; }
.align-center { align-items: center; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }

/* TDesign 主题样式 */
/* 自定义主题色彩 */
:root {
  --td-brand-color: #165DFF;
  --td-brand-color-light: #4080FF;
  --td-brand-color-focus: #0E42D2;
  --td-success-color: #00A870;
  --td-warning-color: #ED7B2F;
  --td-error-color: #D54941;
  --td-info-color: #0594FA;
}

/* TDesign 组件样式覆盖 */
.t-button--primary {
  background: linear-gradient(135deg, var(--td-brand-color) 0%, #722ED1 100%);
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(22, 93, 255, 0.3);
}

.t-button--primary:active {
  background: linear-gradient(135deg, var(--td-brand-color-focus) 0%, #5A1A9B 100%);
  transform: translateY(2rpx);
}

.t-input {
  border-radius: 12rpx;
  border: 2rpx solid #e5e5e5;
  transition: all 0.3s ease;
}

.t-input:focus {
  border-color: var(--td-brand-color);
  box-shadow: 0 0 0 4rpx rgba(22, 93, 255, 0.1);
}

.t-cell {
  border-radius: 12rpx;
  margin-bottom: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.t-tag {
  border-radius: 20rpx;
  font-weight: 500;
}

.t-avatar {
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.t-card {
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  overflow: hidden;
}

.t-dialog {
  border-radius: 16rpx;
  overflow: hidden;
}

.t-toast {
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

/* 时间银行主题色彩 */
.elderly-theme {
  --td-brand-color: #FF8A65;
  --td-brand-color-light: #FFAB91;
  --td-brand-color-focus: #FF7043;
  --elderly-primary: #FF8A65;
  --elderly-secondary: #FF7043;
  --elderly-accent: #FF5722;
  --elderly-light: #FFE0B2;
  --elderly-lighter: #FFF3E0;
  --elderly-background: #FFF8E1;
  --elderly-text: #E65100;
  --elderly-text-light: #FF6F00;
}

.family-theme {
  --td-brand-color: #165DFF;
  --td-brand-color-light: #4080FF;
  --td-brand-color-focus: #0E42D2;
}

/* 老人端全局样式 - 简约版 */
.elderly-page {
  --elderly-primary: #FF8A65;
  --elderly-secondary: #FF7043;
  --elderly-accent: #FF5722;
  --elderly-light: #FFE0B2;
  --elderly-lighter: #FFF3E0;
  --elderly-background: #FFF8E1;
  --elderly-text: #E65100;
  --elderly-text-light: #FF6F00;
}

/* 老人端简约卡片样式 */
.elderly-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #FFE0B2;
  box-shadow: 0 2rpx 8rpx rgba(255, 138, 101, 0.1);
}

.elderly-button {
  background: #FF8A65;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(255, 138, 101, 0.2);
}

.elderly-button-secondary {
  background: #FFE0B2;
  color: #FF8A65;
  border: 1rpx solid #FFCC80;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 响应式 */
@media (max-width: 750rpx) {
  .container {
    padding: 24rpx;
  }
}
